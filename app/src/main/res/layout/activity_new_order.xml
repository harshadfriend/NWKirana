<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewOrder">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNOname"
                android:background="@drawable/titleback"
                android:textColor="#fff"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
            android:padding="2dp"
            android:background="@drawable/border2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Product Name"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Rs"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Stk"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Qty"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Total"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:padding="2dp"
                android:background="@drawable/borderproductitem"
                android:id="@+id/etNOproduct"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:completionThreshold="1"/>
            <TextView
                android:padding="2dp"
                android:background="@drawable/borderproductitem"
                android:id="@+id/tvNOrate"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:padding="2dp"
                android:background="@drawable/borderproductitem"
                android:id="@+id/tvNOstock"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:padding="2dp"
                android:background="@drawable/borderproductitem"
                android:id="@+id/etNOquantity"
                android:text="1"
                android:layout_weight="1"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="2dp"
                android:background="@drawable/borderproductitem"
                android:id="@+id/tvNOtotal"
                android:textSize="15dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/btnPlaceOrder"
        android:text="Place Order"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>